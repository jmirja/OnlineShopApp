@model OnlineShop.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<br />
<h2>Delete Product</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border row">
        <input type="hidden" asp-for="ID" />
        <div asp-validation-summery="ModelOnly" class="text-danger"></div>

        <div class="col-md-8">
            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="Price" readonly class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="ProductTypeID"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="ProductTypeID" readonly class="form-control" />
                </div>
                <span asp-validation-for="ProductTypeID" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="SpecialTagID"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="SpecialTagID" readonly class="form-control" />
                </div>
                <span asp-validation-for="SpecialTagID" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="IsAvailable" disabled="disabled" type="checkbox" />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <h3>Do you want to delete product?</h3>
                <input type="submit" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger" value="Delete"/>
                <a asp-action="Index" class="btn btn-success">View List</a>
            </div>
        </div>
        <div class="col-md-1"></div>

        <div class="col-md-3">
            <img src="~/@Model.Image" width="100%" style="border-radius: 5px;border: 1px solid #0094ff " />
        </div>



    </div>
</form>

@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}
