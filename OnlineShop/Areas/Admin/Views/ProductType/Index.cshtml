@using OnlineShop.Models
@model IEnumerable<ProductType> 
@{
    ViewData["Title"] = "Home Page";
}

<br />

<div class="row">
    <div class="col-md-6">
        <h2>Product Type List</h2>
    </div>
    <div class="col-md-6 text-md-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Add New Product</a>
    </div>
</div>

<br />

<div>
    <table class="table table-striped border">
        <thead class="table-info">
            <tr>
                <th>@Html.DisplayNameFor(e => e.ProductTypeName)</th>
                <th></th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                    <td>@item.ProductTypeName</td>
                    <td><partial name="_ActionButtonParital"  model="@item.ID" /></td>
                    </tr>
                }
          
        </tbody>
    </table>
</div>

@section Scripts
{ 
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["Save"]'
            if (save != null) {
                alertify.success(save);
            }
        });

    </script>
}