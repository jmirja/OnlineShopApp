@model OnlineShop.Models.ProductType
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Delete Product</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="ID" />
        <div asp-validation-summery="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductTypeName"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="ProductTypeName"  readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="ProductTypeName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">View List</a>
        </div>
    </div>
</form>

@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}

