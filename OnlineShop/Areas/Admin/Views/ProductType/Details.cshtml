@model OnlineShop.Models.ProductType
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Product Details</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="ID" />
        <div asp-validation-summery="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductTypeName"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="ProductTypeName" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="ProductTypeName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
            <input type="submit" class="btn btn-success" value="View List" />
        </div>
    </div>
</form>

@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}

