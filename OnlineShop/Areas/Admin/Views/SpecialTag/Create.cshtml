@model OnlineShop.Models.SpecialTag
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Create Special Tag</h2>
<form asp-action="Create" method="post">
<div class="p-4 rounded border">
    <div asp-validation-summery="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="SpecialTagName"></label>
        </div>
        <div class="col-md-5">
            <input asp-for="SpecialTagName" class="form-control"/>
        </div>
        <span asp-validation-for="SpecialTagName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save"/>
        <a asp-action="Index" class="btn btn-success">View List</a>
    </div>
</div>
</form>

